<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycodefu.dashboard.DashboardPresenter">
    <children>
        <BorderPane AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <top>
                <FlowPane fx:id="lightsBox" />
            </top>
            <bottom>
                <VBox>
                    <Label fx:id="message" text="A simplest possible afterburner.fx application" styleClass="boxSpacing"/>
                    <HBox styleClass="boxSpacing">
                        <Button fx:id="launch" onAction="#launch" text="Launch"/>
                        <Button onAction="#createLights" text="Create 256 Views Asynchronously"/>
                    </HBox>
                </VBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
